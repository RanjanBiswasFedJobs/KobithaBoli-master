@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.Mobile.cshtml";
}
<form id="contactus" action="/Home/Contact" method="post">
    <div data-role="fieldcontainer">
        <label for="name">First Name:</label>
        <input type="text" id="firstname" required name="FirstName" placeholder="First Name">
    </div>
    <div data-role="fieldcontainer">
        <label for="name">Last Name:</label>
        <input type="text" id="lastname" required name="LastName" placeholder="Last Name">
    </div>
    <div data-role="fieldcontainer">
        <label for="email">Email:</label>
        <input type="email" id="email" required name="email" placeholder="Email">
    </div>
    <input type="submit" data-theme="b" value="Submit" data-role="button">

</form>

<script>

    $(document).bind("pagebeforeshow", function (e, data) {
     
    var $footers = $(document).find('div[data-role="footer"]');
    $footers.find('a').removeClass("ui-btn-active");
    $footers.find('a[data-name="contact"]').addClass("ui-btn-active");

});



</script>